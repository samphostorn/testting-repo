<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:hint="Email Or phone"
                android:id="@+id/ed_edit_User"
                android:layout_marginTop="30dp"

                android:layout_centerHorizontal="true"
                />

            <EditText
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:hint="Password"
                android:id="@+id/ed_edit_Password"
                android:layout_marginTop="30dp"

                android:layout_centerHorizontal="true"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:id="@+id/ed_edit_FirstName"
                android:hint="First Name"



                />
            <EditText
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:id="@+id/ed_edit_LastName"
                android:hint="Last Name"
                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_edit_Email"
            android:hint="MobileNumer Or Email"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/edEditNewPassword"
            android:hint="New Password"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ed_edit_dob"
            android:textColorHint="#ad1457"
            android:hint="BirthDay"/>


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/ed_edit_Gender"
            android:layout_height="50dp"
            android:textColorHint="#ad1457"
            android:hint="Gender"
            />


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>